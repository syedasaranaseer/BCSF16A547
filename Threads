#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include >pthread.h>

Add (void *arg)
{
  int start = (int) arg;
  int end = start + chunk_size;
  
  for(int i=0; i<chunk_size; i++)
  {
     sum = sum + A[i];
  }
  
  return ((void*)sum);
 }
 
 int main()
 {
   int chunk_size = 100, end = 0, start = 0, A[1000], sum = 0;
   pthread_t thread_t1, status_t1, thread_t2, status_t2, thread_t3, status_t3, thread_t4, status_t4, thread_t5, status_t5, thread_t6,     status_t6, thread_t7, status_t7, thread_t8, status_t8, thread_t9, status_t9, thread_t10, status_t10;
   
   for (int j=0; j<1000; j++)
   {
       A[j] = 1;
   }
   
   pthread_create(&thread_t1, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t1, (void**)&status_t1);
   pthread_create(&thread_t2, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t2, (void**)&status_t2);
   pthread_create(&thread_t3, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t3, (void**)&status_t3);
   pthread_create(&thread_t4, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t4, (void**)&status_t4);
   pthread_create(&thread_t5, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t5, (void**)&status_t5);
   pthread_create(&thread_t6, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t6, (void**)&status_t6);
   pthread_create(&thread_t7, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t7, (void**)&status_t7);
   pthread_create(&thread_t8, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t8, (void**)&status_t8);
   pthread_create(&thread_t9, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t9, (void**)&status_t9);
   pthread_create(&thread_t10, NULL, Add, (void*)(0*chunk_size));
   pthread_join(thread_t10, (void**)&status_t10);
   
   int sum = status_t1 + status_t2 + status_t3 + status_t4 + status_t5 + status_t6 + status_t7 + status_t8 + status_t9 + status_t10;
   
   printf("Sum is %d", sum);
   return 0;
}
