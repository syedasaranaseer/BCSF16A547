#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/wait.h>
#include <time.h>

int main()
{
    srand(time(0));
    int n=0, array[1000], array1[10], l=0, count=0, total =0, count1=0;
    for(int y=0; y<10; y++)
    {
        array1[y] = 0;
    }
    
    for(int i=0; i<1000; i++)
    {
        array[i] = rand()%9+1;
    }
    
    while(n<10)
    {
        l=l+100;
        
        int cpid = fork();
        if(cpid == 0)
        {
            for(int f=0; f<l; f++)
            {
                array1[count] = array1[count] + array[f];
            }
            count++;
            n++;
            printf("%d", array1[count-1]);
        }
        else
        {
            total=0;
            count1=0;
            while(count1<10)
            {
                total = total + array1[count1];
                count1++;
                printf("%d", total);
            }
            n++;
        }
    }
    
    return 0;
}
